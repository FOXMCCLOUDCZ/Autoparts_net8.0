@model CurrencyCreateVM
@{
    ViewData["Title"] = "CurrencyCreate";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Vytvořit měnu</h5>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Currency" asp-action="CurrencyList">Měna</a></li>
            <li class="breadcrumb-item active"><a asp-area="SuperAdmin" asp-controller="Currency" asp-action="CurrencyCreate">Vytvořit měnu</a></li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body mt-3">
        <form asp-area="SuperAdmin" asp-controller="Currency" asp-action="CurrencyCreate" method="post" class="row g-3" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-3">
                <div class="text-end mx-3">
                    <small id="NumericCurrencyCodeCount3" class="form-text">0/3</small>
                </div>
                <div class="form-floating">
                    <input asp-for="NumericCurrencyCode" type="text" class="form-control" id="NumericCurrencyCode" placeholder="Číselný kód měny">
                    <label asp-for="NumericCurrencyCode">Číselný kód měny</label>
                    <span asp-validation-for="NumericCurrencyCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-end mx-3">
                    <small id="CurrencyCodeCount3" class="form-text">0/3</small>
                </div>
                <div class="form-floating">
                    <input asp-for="CurrencyCode" type="text" class="form-control" id="CurrencyCode" placeholder="Kód měny">
                    <label asp-for="CurrencyCode">Kód měny</label>
                    <span asp-validation-for="CurrencyCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="text-end mx-3">
                    <small id="CurrencyNameCount50" class="form-text">0/50</small>
                </div>
                <div class="form-floating">
                    <input asp-for="CurrencyName" type="text" class="form-control" id="CurrencyName" placeholder="Název měny">
                    <label asp-for="CurrencyName">Název měny</label>
                    <span asp-validation-for="CurrencyName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault">Aktivní/neaktivní</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Uložit</button>
                <button type="reset" class="btn btn-secondary">Vymazat data</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        setupLiveCharacterCount('NumericCurrencyCode', 'NumericCurrencyCodeCount3', 3);
        setupLiveCharacterCount('CurrencyCode', 'CurrencyCodeCount3', 3);
        setupLiveCharacterCount('CurrencyName', 'CurrencyNameCount50', 50);
    </script>
}