@model BrandEditVM
@{
    ViewData["Title"] = "BrandEdit";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Editovat brand</h5>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Brand" asp-action="BrandList">Brand</a></li>
            <li class="breadcrumb-item active"><a asp-area="SuperAdmin" asp-controller="Brand" asp-action="BrandEdit">Editovat</a></li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body mt-3">
        <form asp-area="SuperAdmin" asp-controller="Brand" asp-action="BrandEdit" method="post" class="row g-3" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="col-md-3">
                <div class="text-end mx-3">
                    <small id="TecDocCount6" class="form-text">0/6</small>
                </div>
                <div class="form-floating">
                    <input asp-for="TecDoc" type="text" class="form-control" id="TecDoc" placeholder="TecDoc">
                    <label asp-for="TecDoc">TecDoc</label>
                    <span asp-validation-for="TecDoc" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-9">
                <div class="text-end mx-3">
                    <small id="TitleCount50" class="form-text">0/50</small>
                </div>
                <div class="form-floating">
                    <input asp-for="BrandName" type="text" class="form-control" id="Title" placeholder="Název brandu">
                    <label asp-for="BrandName">Název brandu</label>
                    <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="text-end mx-3">
                    <small id="GeneralInformationCount2000" class="form-text">0/2000</small>
                </div>
                <div class="form-floating">
                    <textarea asp-for="BrandDescription" type="text" class="form-control" style="height: 300px" id="GeneralInformation" placeholder="Informace o brandu"></textarea>
                    <label asp-for="BrandDescription">Informace o brandu</label>
                    <span asp-validation-for="BrandDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault">Aktivní/neaktivní</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Uložit změny</button>
                <button type="reset" class="btn btn-secondary">Vrátit změny</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        setupLiveCharacterCount('TecDoc', 'TecDocCount6', 6);
        setupLiveCharacterCount('Title', 'TitleCount50', 50);
        setupLiveCharacterCount('GeneralInformation', 'GeneralInformationCount2000', 2000);
    </script>
}