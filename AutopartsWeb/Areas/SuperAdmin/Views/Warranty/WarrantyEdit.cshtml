@model WarrantyEditVM
@{
    ViewData["Title"] = "WarrantyEdit";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Editovat záruční lhůtu</h5>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Warranty" asp-action="WarrantyList">Záruční lhůty</a></li>
            <li class="breadcrumb-item active"><a asp-area="SuperAdmin" asp-controller="Warranty" asp-action="WarrantyEdit">Editovat</a></li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body mt-3">
        <form asp-area="SuperAdmin" asp-controller="Warranty" asp-action="WarrantyEdit" method="post" class="row g-3" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="col-md-12">
                <div class="text-end mx-3">
                    <small id="TitleCount50" class="form-text text-muted">0/50</small>
                </div>
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" id="Title" placeholder="Název záruční lhůty">
                    <label asp-for="Title">Název záruční lhůty</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault">Aktivní/neaktivní</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Uložit změny</button>
                <button type="reset" class="btn btn-secondary">Vrátit změny</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        setupLiveCharacterCount('Title', 'TitleCount50', 50);
    </script>
}