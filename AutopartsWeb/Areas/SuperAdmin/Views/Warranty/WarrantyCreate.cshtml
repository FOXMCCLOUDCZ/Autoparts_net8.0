@model WarrantyCreateVM
@{
    ViewData["Title"] = "WarrantyCreate";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Vytvořit záruční lhůtu</h5>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="SuperAdmin" asp-controller="Warranty" asp-action="WarrantyList">Záruční lhůty</a></li>
            <li class="breadcrumb-item active"><a asp-area="SuperAdmin" asp-controller="Warranty" asp-action="WarrantyCreate">Nová záruční lhůta</a></li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body mt-3">
        <form asp-area="SuperAdmin" asp-controller="Warranty" asp-action="WarrantyCreate" method="post" class="row g-3" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" id="floatingName" placeholder="Název záruční lhůty">
                    <label asp-for="Title">Název záruční lhůty</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault">Aktivní/neaktivní</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Uložit</button>
                <button type="reset" class="btn btn-secondary">Vymazat data</button>
            </div>
        </form>
    </div>
</div>